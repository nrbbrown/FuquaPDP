<div id="outer-score-container">
	<div class="instructionLink" onclick="openinstructions('instructionLink','scoreCardInstruction')">
		Instructions
	</div>
	<div id="scoreCardInstruction" class="hidediv">
		<div class="">Instructions for Score Card</div>
		<div class="">Score card instructions goes here</div>
	</div>
	<div class="scoreTitle">
		<div class="floatLeft">
			Score Card for Week of <%=@dateOfEntry.strftime("%b %e")%>
			<%if @isCurrentWeek == true %>
				<span class="currentweekLabel">(current week)</span>
			<%end%>
		</div>
		<div class="floatRight weekSelect">
			Select Week&nbsp;
			<select id="entry_week_change" onchange="changeReportWeek()" autocomplete="off">
				<%
				@startWeek = @minDate.cweek
				@endWeek = @maxDate.cweek
				while @startWeek <= @endWeek
				%>
					<option class="entryOption" <%if @dateOfEntry.cweek == @startWeek %>selected=""<%end%> value="<%=@startWeek%>">Week <%=@startWeek%></option>
					<%@startWeek = @startWeek + 1%>
				<%end%>
			</select>
		</div>
	</div>
	
	<div class="effortBox">
		<div class="effortScoreBox">
			<div class="titleBoxInner">
				Effort Score
			</div>
			<div class="effortInnerBox">
				<div class="effortRow overallRow">
					<div class="effortRowTitle">Overall</div>
					<div class="effortRowProgress"><%=@overallScore%>%</div>
				</div>
				<div class="effortRow effortRow2">
					<div class="categoryRowBox">
						<div class="effortRowTitle">Academic</div>
						<div class="effortRowProgress"><%=@domainScore["academic"]%></div>
					</div>
				</div>
				<%@ggoals = @academicGoals%>
				<%= render 'goaleffort' %>
				
				<div class="effortRow effortRow2">
					<div class="categoryRowBox">
						<div class="effortRowTitle">Career</div>
						<div class="effortRowProgress"><%=@domainScore["career"]%></div>
					</div>
				</div>
				<%@ggoals = @careerGoals%>
				<%= render 'goaleffort' %>
				
				<div class="effortRow effortRow2">
					<div class="categoryRowBox">
						<div class="effortRowTitle">Social</div>
						<div class="effortRowProgress"><%=@domainScore["social"]%></div>
					</div>
				</div>
				<%@ggoals = @socialGoals%>
				<%= render 'goaleffort' %>
				
				<div class="effortRow effortRow2">
					<div class="categoryRowBox">
						<div class="effortRowTitle">Personal</div>
						<div class="effortRowProgress"><%=@domainScore["personal"]%></div>
					</div>
				</div>
				<%@ggoals = @personalGoals%>
				<%= render 'goaleffort' %>
				
				<div class="effortRow effortRow2">
					<div class="categoryRowBox">
						<div class="effortRowTitle">Physical</div>
						<div class="effortRowProgress"><%=@domainScore["physical"]%></div>
					</div>
				</div>
				<%@ggoals = @physicalGoals%>
				<%= render 'goaleffort' %>
				<div class="effortRow overallRowBottom">
					
				</div>
			</div>
		</div>

	</div>
	
	<div class="completeBox">
		<div class="effortScoreBox">
			<div class="titleBoxInner">
				Progress Score
			</div>
			<div class="effortRow overallRow">
				<div class="effortRowTitle">Overall</div>
				<div class="effortRowProgress"><%=@overallCompleteScore%>%</div>
			</div>
			<div class="effortRow effortRow2">
				<div class="categoryRowBox">
					<div class="effortRowTitle">Academic</div>
					<div class="effortRowProgress"><%=@domainCompleteScore["academic"]%></div>
				</div>
			</div>
			<%@ggoals = @academicGoals%>
			<%= render 'goalcomplete' %>
			
			<div class="effortRow effortRow2">
				<div class="categoryRowBox">
					<div class="effortRowTitle">Career</div>
					<div class="effortRowProgress"><%=@domainCompleteScore["career"]%></div>
				</div>
			</div>
			<%@ggoals = @careerGoals%>
			<%= render 'goalcomplete' %>
			
			<div class="effortRow effortRow2">
				<div class="categoryRowBox">
					<div class="effortRowTitle">Social</div>
					<div class="effortRowProgress"><%=@domainCompleteScore["social"]%></div>
				</div>
			</div>
			<%@ggoals = @socialGoals%>
			<%= render 'goalcomplete' %>
			
			<div class="effortRow effortRow2">
				<div class="categoryRowBox">
					<div class="effortRowTitle">Personal</div>
					<div class="effortRowProgress"><%=@domainCompleteScore["personal"]%></div>
				</div>
			</div>
			<%@ggoals = @personalGoals%>
			<%= render 'goalcomplete' %>
			
			<div class="effortRow effortRow2">
				<div class="categoryRowBox">
					<div class="effortRowTitle">Physical</div>
					<div class="effortRowProgress"><%=@domainCompleteScore["physical"]%></div>
				</div>
			</div>
			<%@ggoals = @physicalGoals%>
			<%= render 'goalcomplete' %>
			<div class="effortRow overallRowBottom">				
			</div>
		</div>
	</div>
</div>